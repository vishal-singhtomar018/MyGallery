                <!-- Left Content -->
                <div class="col-lg-6 col-md-12 text-center text-lg-start" data-aos="fade-up" data-aos-duration="1000">
                    <p class="text-muted fs-5 mb-2">Hello, I'm</p>
                    <h1 class="hero-title">
                        <%= name %>
                    </h1>
                    <p class="hero-subtitle mb-4">Full Stack Developer & UI/UX Designer</p>
